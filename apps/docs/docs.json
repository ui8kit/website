                "icon": "rocket",
                "pages": [
                  "ru/обзор",
                  "ru/начало-работы",
                  "ru/development-guide/базовый-рабочий-процесс",
                  "ru/development-guide/продвинутый-рабочий-процесс",
                  "ru/development-guide/руководство-разработчика",
                  "ru/решение-проблем"
                ]
              },
              {
                "group": "Архитектура",
                "icon": "layers",
                "pages": [
                  "ru/architecture/архитектура",
                  "ru/architecture/структура-пакета",
                  "ru/architecture/система-сборки",
                  "ru/architecture/конфигурация-typescript"
                ]
              },
              {
                "group": "Компоненты",
                "icon": "puzzle",
                "pages": [
                  "ru/architecture/базовые-компоненты",
                  "ru/api-reference/базовые-компоненты",
                  "ru/architecture/ui-компоненты",
                  "ru/api-reference/ui-компоненты",
                  "ru/api-reference/компоненты-макетов",
                  "ru/architecture/макеты",
                  "ru/architecture/реестр-компонентов",
