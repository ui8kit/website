{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "docs",
  "colors": {
    "primary": "#1471c8",
    "light": "#0789ca",
    "dark": "#154c7f"
  },
  "fonts": {
    "family": "Nunito Sans"
  },
  "favicon": "/assets/favicon.svg",
  "navigation": {
    "global": {
      "anchors": [
