              {
                "group": "Getting started",
                "icon": "rocket",
                "pages": [
                  "en/overview",
                  "en/getting-started",
                  "en/development-guide/basic-workflow",
                  "en/development-guide/advanced-workflow",
                  "en/development-guide/development-guide",
                  "en/troubleshooting"
                ]
              },
              {
                "group": "Architecture",
                "icon": "layers",
                "pages": [
                  "en/architecture/architecture",
                  "en/architecture/package-structure",
                  "en/architecture/build-system",
                  "en/architecture/typescript-configuration"
                ]
              },
              {
                "group": "Components",
                "icon": "puzzle",
                "pages": [
                  "en/architecture/core-components",
                  "en/api-reference/core-components",
                  "en/architecture/ui-components",
                  "en/api-reference/ui-components",
                  "en/api-reference/layout-components",
                  "en/architecture/layouts",
                  "en/architecture/component-registry",
                  "en/architecture/variant-system",
                  "en/development-guide/dark-mode"
