{
  "include": ["./src"],
  "exclude": ["./lib", "./dist"],
  "compilerOptions": {
    "rootDir": "src",
    "types": ["node"],
    "target": "ES2020",
    "lib": ["DOM", "ESNext"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
